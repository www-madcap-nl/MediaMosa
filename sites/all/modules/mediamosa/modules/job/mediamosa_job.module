/**
 * Trigger status page.
 */
function mediamosa_job_cron() {
  // Just trigger, it has his own protection on overrun.
  $hostname = variable_get('mediamosa_cron_uri_app', 'localhost');
  $use_localhost = variable_get('mediamosa_cron_uri_app_local', FALSE);

  $a_options = array('do_internal' => TRUE, 'method' => 'HEAD');
  if ($use_localhost) {
    $a_options['headers']['Host'] = $hostname;
    $hostname = 'localhost';
  }

  // Jobserver.
  mediamosa_http::do_head_call('http://' . $hostname  . '/internal/cron/jobserver', $a_options);
  // Jobschedular.
  mediamosa_http::do_head_call('http://' . $hostname  . '/internal/cron/jobschedular', $a_options);
}

