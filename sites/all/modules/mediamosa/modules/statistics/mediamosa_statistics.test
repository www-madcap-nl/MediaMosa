/**
  * @file
  * Unittests for statistics functions.
  */
class MediaMosaStatisticsTestCaseEga extends MediaMosaTestCaseEga {

  // ------------------------------------------------------------------ Members.

  // ------------------------------------------------------------------ Functions.
  public static function getInfo() {
    return array(
      'name' => 'Statistics - common tests',
      'description' => 'Testing statistics related functions and rest calls.',
      'group' => MEDIAMOSA_TEST_GROUP_MEDIAMOSA_CORE_STATISTICS,
    );
  }

  // ------------------------------------------------------------------ Tests.

  // Testing statistics, see: ticket 565.
  function testStatisticsFunction() {

    // Setup.

    // Limit.
    $limit = 10;

    // Get the month and the year.
    $now = time();
    // Numeric representation of a month, without leading zeros (1 through 12).
    $month= date("n", $now);
    // A full numeric representation of a year, 4 digits.
    $year= date("Y", $now);

    $a_xml = $this->getStatisticsDataupload($year, $month, $limit, array(), 'Get statistics data upload', array(), array(mediamosa_error::ERRORCODE_OKAY, mediamosa_error::ERRORCODE_EMPTY_RESULT));
    //$this->var_export($a_xml);
  }
}
