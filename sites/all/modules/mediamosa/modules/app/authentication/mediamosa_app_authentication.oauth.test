 /**
  * @file
  * Unittests for authentication with oAuth.
  */
class MediaMosaAppAuthenticationOAuthTestCase extends MediaMosaTestCase {

  public static function getInfo() {
    return array(
      'name' => 'APP - oAuth',
      'description' => 'oAuth authentication for end user applications.',
      'group' => MEDIAMOSA_TEST_GROUP_MEDIAMOSA_CORE_APP,
      mediamosa_settings::MEDIAMOSA_RUN => mediamosa_settings::MEDIAMOSA_RUN_15_MINUTES,
    );
  }

  function setUp() {
    parent::setUp('mediamosa_app_authentication');

    // Create and login user
    $rest_user = $this->drupalCreateUser(array('administer mediamosa'));
    $this->drupalLogin($rest_user);
  }

  function testAppAuthentication() {
    // Create all stuff needed for this test.
    $app = $this->createApp();
    $oauth_consumer_key = $app[mediamosa_app_db::OAUTH_CONSUMER_KEY];
    $oauth_consumer_secret = $app[mediamosa_app_db::OAUTH_CONSUMER_SECRET];

    // TODO
  }
}
