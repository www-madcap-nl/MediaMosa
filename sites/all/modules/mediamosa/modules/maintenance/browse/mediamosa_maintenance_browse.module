// Permissions.
define('MEDIAMOSA_MAINTENACE_BROWSE_PERM_BROWSE_ASSETS', 'view mediamosa maintenance browse assets');
define('MEDIAMOSA_MAINTENACE_BROWSE_PERM_BROWSE_COLLECTIONS', 'view mediamosa maintenance browse collections');

// SESSIONs.
define('MEDIAMOSA_MAINTENACE_BROWSE_ASSETS_SESSION', 'mediamosa_maintenance_browse_assets_session');
define('MEDIAMOSA_MAINTENACE_BROWSE_COLLECTIONS_SESSION', 'mediamosa_maintenance_browse_collections_session');

// Required files.
require_once 'mediamosa_maintenance_browse.inc';
require_once 'mediamosa_maintenance_browse_asset.inc';
require_once 'mediamosa_maintenance_browse_collection.inc';

/**
 * Implementation of hook_menu().
 */
function mediamosa_maintenance_browse_menu() {
  $items = array();

  $items['mediamosa/browse/asset'] = array(
    'title' => 'MediaMosa asset browser',
    'page callback' => 'drupal_get_form',
    'page arguments' => array('mediamosa_maintenance_browse_asset_form'),
    'access arguments' => array(MEDIAMOSA_MAINTENACE_BROWSE_PERM_BROWSE_ASSETS),
  );
  $items['mediamosa/browse/collection'] = array(
    'title' => 'MediaMosa collection browser',
    'page callback' => 'drupal_get_form',
    'page arguments' => array('mediamosa_maintenance_browse_collection_form'),
    'access arguments' => array(MEDIAMOSA_MAINTENACE_BROWSE_PERM_BROWSE_COLLECTIONS),
  );
  $items['mediamosa/browse/asset/%'] = array(
    'title' => 'MediaMosa asset details',
    'type' => MENU_CALLBACK,
    'page callback' => 'mediamosa_maintenance_browse_asset_details',
    'page arguments' => array(1),
    'access arguments' => array(MEDIAMOSA_MAINTENACE_BROWSE_PERM_BROWSE_ASSETS),
  );

  return $items;
}

/**
 * Implement hook_permission().
 */
function mediamosa_maintenance_browse_permission() {
  return array(
    MEDIAMOSA_MAINTENACE_BROWSE_PERM_BROWSE_ASSETS =>  array(
      'title' => t('Browse assets'),
      'description' => t('Users with this permission may browse through the assets.'),
    ),
    MEDIAMOSA_MAINTENACE_BROWSE_PERM_BROWSE_COLLECTIONS =>  array(
      'title' => t('Browse collections'),
      'description' => t('Users with this permission may browse through the collections.'),
    ),
  );
}
